<h2>Lista de categorias: </h2>
<hr>
   <a href="/routes/admin/categorias/add/">
      <buttun class="btn btn-success">Nova categoria</buttun>
   </a>
      <div class="nav justify-content-end"> 
         <a href="/categorias" >
            <button class="btn btn-outline-success" id="" style="position: absolute; right: 16.25%; top: 18.25%; vertical-align: text-top; text-indent: 0px;">
               Todas as categorias
            </button>
         </a> 
      </div>
   {{#each categorias}}
      <div class="card mt-4">
         <div class="card-body">
            <h4>{{nome}}</h4>
               <small>Slug: {{slug}}</small><br>
               <small>Data de criação: {{date}}</small><br>
            <div class="container">
               <div class="row">
                  <div class="col-md-auto" style="margin: -0.8%;">
                     <a href="/routes/admin/categorias/edit/{{_id}}">
                        <button class="btn btn-success mt-4">Editar categoria</button> 
                     </a>
                  </div>
                  <div class="col-md-auto" style="margin: -0.8%;">
                     <form action="/routes/admin/categorias/deletar" method="POST">
                        <input type="hidden" name="id" value="{{_id}}">
                        <button class="btn btn-danger mt-4">Deletar categoria</button>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   {{else}}
      <h4 class="mt-3">Nenhuma categoria registrada!<h4>
   {{/each}} 